<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VPreca" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/hiragino_sans_w3</item>
        <item name="fontFamily">@font/hiragino_sans_w3</item>
        <item name="android:textColor">#353535</item>
        <item name="android:textSize">14sp</item>
        <item name="android:dropDownSpinnerStyle">@style/MySpinner</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--        <item name="rippleColor">@android:color/transparent</item>-->
        <item name="android:spinnerItemStyle">@style/SpinnerItemTheme</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="android:color">@color/black</item>
        <item name="color">@color/black</item>
    </style>

    <style name="Widget.MaterialComponents.Toolbar.White" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="subtitleTextColor">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/black</item>
    </style>


    <style name="Theme.VPreca.WhiteAccent">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

    <style name="Theme.VPreca.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VPreca.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.VPreca.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.VPreca.Fullscreen" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="ThemeOverlay.VPreca.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.VPreca.SplashTheme" parent="Theme.VPreca.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:dropDownSelector">#f1f1f1</item>
        <item name="android:dropDownItemStyle">@style/SpinnerItemTheme</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemTheme</item>
    </style>

    <style name="SpinnerItemTheme" parent="SpinnerTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#f1f1f1</item>
    </style>

    <style name="PowerSpinnerView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="spinner_arrow_animate">false</item>
        <item name="spinner_arrow_gravity">end</item>
        <item name="spinner_arrow_padding">8dp</item>
        <item name="spinner_arrow_tint">@color/black</item>
        <item name="spinner_divider_color">#fefefe</item>
        <item name="spinner_divider_show">false</item>
        <item name="spinner_divider_size">0dp</item>
        <item name="spinner_item_height">46dp</item>
        <item name="spinner_popup_animation">normal</item>
        <item name="spinner_popup_background">@color/white</item>
        <item name="spinner_popup_elevation">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/brown_grey</item>
        <item name="android:minHeight">54dp</item>
        <item name="android:hint">@string/hint_dropdown</item>
        <item name="android:background">@drawable/input_signup_style</item>
    </style>

</resources>