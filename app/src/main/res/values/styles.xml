<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>

    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">9dp</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/corner_md</item>
    </style>

    <style name="Widget.App.Button.Outlined.BoldText" parent="@style/Widget.App.Button.Outlined">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_sans_w6</item>
        <item name="fontFamily">@font/hiragino_sans_w6
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="Widget.App.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corner_md</item>
    </style>

    <style name="Widget.App.Button.BoldText" parent="@style/Widget.App.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_sans_w6</item>
        <item name="fontFamily">@font/hiragino_sans_w6
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="Widget.App.TextButton.Bold" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_sans_w6</item>
        <item name="fontFamily">@font/hiragino_sans_w6
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="Widget.App.Button.Icon.Bold" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_sans_w6</item>
        <item name="fontFamily">@font/hiragino_sans_w6
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="Widget.App.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_md</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_md</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_md</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_md</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextInputEditTextFilledBox">
        <item name="android:textColorHint">@color/brown_grey</item>
        <item name="android:background">@drawable/textinput_background</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>


    <style name="Widget.Theme.VPreca.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.VPreca.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.Theme.VPreca.ActionBar.Title" parent="Base.Widget.Theme.VPreca.ActionBar.Title"></style>

    <style name="Base.Widget.Theme.VPreca.ActionBar.Title" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight" tools:targetApi="p">
            @android:integer/status_bar_notification_info_maxnum
        </item>
        <item name="android:fontFamily">@font/hiragino_sans_w6</item>
        <item name="fontFamily">@font/hiragino_sans_w6
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="Widget.AppCompat.TextView.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_sans_w6</item>
        <item name="fontFamily">@font/hiragino_sans_w6
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button_cancel_confirm_signup</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButtonWhite" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_outline_white</item>
    </style>

    <style name="MySpinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_bg</item>
        <!--        <item name="android:dropDownSelector">@drawable/my_spinner_selector</item>-->
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">#f1f1f1</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingStart">@dimen/fragment_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/fragment_horizontal_margin</item>
        <item name="android:textAppearance">@style/Widget.AppCompat.TextView.Bold</item>
        <item name="android:textSize">16sp</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="Widget.App.MaterialComponents.Button.TextButton.Bold" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_sans_w6</item>
        <item name="fontFamily">@font/hiragino_sans_w6
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <!--        <item name="rippleColor">@android:color/transparent</item>-->
    </style>

    <style name="DialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@drawable/round_dialog</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog.ProgressBar" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="background">@color/black</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">10dp</item>

        <item name="alertDialogStyle">@style/ThemeOverlay.MaterialAlertDialog.MaterialComponents
        </item>
        <item name="android:layout">@layout/dialog_progress_bar</item>
    </style>

    <style name="ThemeOverlay.MaterialAlertDialog.MaterialComponents" parent="@style/MaterialAlertDialog.MaterialComponents">
        <!--        <item name="android:layout">@layout/dialog_progress_bar</item>-->
        <item name="backgroundInsetStart">0dp</item>
        <item name="backgroundInsetTop">0dp</item>
        <item name="backgroundInsetEnd">0dp</item>
        <item name="backgroundInsetBottom">0dp</item>
    </style>
</resources>