<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/term_of_use"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.termofuse.TermOfUseFragment"
    android:paddingHorizontal="60dp"
    android:background="@color/primary">
    <com.google.android.material.card.MaterialCardView
        style="@style/MyCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primary"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/MyCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="160dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/card_logo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/logo_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/card_username"
                style="@style/Widget.AppCompat.TextView.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VPRECAUSER"
                android:textColor="@color/primary"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/card_type_logo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/visa_gift"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/card_username" />
        <LinearLayout
            android:paddingVertical="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/card_username"
            android:orientation="horizontal"
            android:id="@+id/code_zone"
            >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/card_expire_date"
                   android:textSize="11sp"
                   android:textColor="@color/primary"
                   android:layout_gravity="center_vertical"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="02/02"
                   android:textSize="18sp"
                   android:textColor="@color/primary"
                   android:layout_gravity="clip_vertical"
                   android:paddingLeft="4dp"
                   style="@style/Widget.AppCompat.TextView.Bold"/>
           </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sercue_code"
                    android:textSize="11sp"
                    android:textColor="@color/primary"
                    android:layout_gravity="center_vertical"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textSize="18sp"
                    android:textColor="@color/primary"
                    android:layout_gravity="clip_vertical"
                    android:paddingLeft="4dp"
                    style="@style/Widget.AppCompat.TextView.Bold"/>
            </LinearLayout>
        </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:paddingVertical="4dp"
                app:layout_constraintBottom_toTopOf="@id/code_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="1234 5678 9238 9890"
                android:textColor="@color/primary"
                style="@style/Widget.AppCompat.TextView.Bold"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
