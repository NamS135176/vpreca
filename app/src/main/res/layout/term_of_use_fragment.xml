<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/term_of_use"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           tools:context=".ui.termofuse.TermOfUseFragment"
           android:paddingBottom="35dp">

           <include
               android:id="@+id/appbar_policy"
               layout="@layout/toolbar_title_only"
               app:layout_constraintTop_toTopOf="parent"
               app:title="@{@string/title_term_of_use}" />

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/text_caption"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="29dp"
               android:layout_marginTop="29dp"
               android:lineSpacingExtra="6sp"
               android:textSize="12sp"
               android:text="@string/des_term_of_use"
               app:layout_constraintTop_toBottomOf="@+id/appbar_policy" />

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rvTermOfUse"
               android:layout_width="match_parent"
               android:layout_height="400dp"
               android:layout_marginHorizontal="22dp"
               android:layout_marginTop="43dp"
               android:background="@drawable/border_term_of_use"
               android:paddingTop="37dp"
               android:paddingLeft="35dp"
               android:paddingRight="37dp"
               android:paddingBottom="37dp"
               app:layout_constraintTop_toBottomOf="@+id/text_caption" />

           <LinearLayout
               android:id="@+id/checkZone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="23dp"
               android:gravity="center"
               android:orientation="horizontal"
               android:paddingHorizontal="16dp"
               app:layout_constraintTop_toBottomOf="@+id/rvTermOfUse">
               <com.google.android.material.checkbox.MaterialCheckBox
                   android:id="@+id/cbTermOfUse"
                   android:layout_width="36dp"
                   android:layout_height="36dp"
                   android:gravity="center"
                   app:useMaterialThemeColors="false"
                   android:checked="false"
                   android:button="@drawable/checkbox_policy"
                   />
               <androidx.appcompat.widget.AppCompatTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="@string/confirm_term_of_use"
                   android:textColor="@color/black"
                   android:textSize="16sp"
                   style="@style/Widget.AppCompat.TextView.Bold"
                   android:paddingLeft="18dp"
                   tools:targetApi="p" />
           </LinearLayout>

           <com.google.android.material.button.MaterialButton
               android:id="@+id/btn_submit_term_of_use"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="22dp"
               android:layout_marginVertical="35dp"
               android:enabled="false"
               android:text="@string/confirm_term_of_use_btn"
               app:cornerRadius="27dp"
               android:textColor="@color/white"
               android:textSize="18sp"
               android:paddingVertical="11dp"
               style="@style/Widget.AppCompat.TextView.Bold"
               app:layout_constraintTop_toBottomOf="@+id/checkZone"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.core.widget.NestedScrollView>
</layout>