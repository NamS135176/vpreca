<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/term_of_use"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.termofuse.TermOfUseFragment">

        <include
            layout="@layout/toolbar_title_only"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{@string/title_term_of_use}" />

        <LinearLayout
            android:id="@+id/indication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/appbar_policy">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="32dp"
                android:text="@string/des_term_of_use" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTermOfUse"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_term_of_use"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/indication" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/rvTermOfUse">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbTermOfUse"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:gravity="center" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/confirm_term_of_use"
                android:textColor="@color/black"
                android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
                android:textSize="16sp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit_term_of_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:enabled="false"
            android:text="@string/confirm_term_of_use_btn"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>