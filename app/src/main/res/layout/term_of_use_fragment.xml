<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/term_of_use"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.termofuse.TermOfUseFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/appbar_policy">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="32dp"
            android:paddingTop="32dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/title_term_of_use"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
                />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/indication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appbar_policy"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:gravity="center_horizontal|center_vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/des_term_of_use"
            android:paddingHorizontal="32dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTermOfUse"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/indication"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/border_term_of_use"
        android:layout_marginHorizontal="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rvTermOfUse"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
<!--        <com.google.android.material.checkbox.MaterialCheckBox-->
<!--            android:id="@+id/cbTermOfUse"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="20dp"-->
<!--            android:gravity="center"-->
<!--            android:button="@drawable/checkbox_policy"/>-->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbTermOfUse"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            app:useMaterialThemeColors="false"
            android:checked="false"
            android:button="@drawable/checkbox_policy"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/confirm_term_of_use"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit_term_of_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/confirm_term_of_use_btn"
        android:layout_marginBottom="8dp"
        android:enabled="false"
        android:layout_marginHorizontal="16dp"
        app:cornerRadius="16dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>