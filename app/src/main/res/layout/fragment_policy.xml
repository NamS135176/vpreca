<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.signup/SignupFragment"
>
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/appbar_policy">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="32dp"
                android:paddingTop="32dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/title_next_policy"
                    android:gravity="center"
                    android:visibility="invisible"/>
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.AppCompat.TextView.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/title_appbar_policy"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.AppCompat.TextView.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/title_next_policy"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="14sp"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/policy_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/appbar_policy"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:textSize="12sp"
            android:text="@string/policy_des"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/border_term_of_use"
            android:id="@+id/svPolicy"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/policy_des"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            >
        </androidx.recyclerview.widget.RecyclerView>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/policy_note_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/svPolicy"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:textSize="12sp"
            android:text="@string/policy_note_top"
            android:textColor="@color/primary"
            style="@style/Widget.AppCompat.TextView.Bold"
            android:gravity="center_horizontal"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/policy_note_bot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/policy_note_top"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:textSize="12sp"
            android:text="@string/policy_note_bot"
            android:textColor="@color/primary"
            style="@style/Widget.AppCompat.TextView.Bold"
            android:gravity="center_horizontal"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/btn_next_policy"
            android:layout_marginBottom="24dp"
            android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
            android:enabled="false"
            android:textColor="@color/white"
            android:layout_marginHorizontal="24dp"
            app:cornerRadius="24dp"
            android:paddingVertical="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btn_submit_policy"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbPolicy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                app:useMaterialThemeColors="false"
                android:checked="false"
                android:button="@drawable/checkbox_policy"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/confirm_policy"
                android:gravity="center"
                android:paddingLeft="16dp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>