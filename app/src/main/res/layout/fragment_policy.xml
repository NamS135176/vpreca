<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".ui.signup/SignupFragment">

            <include
                android:id="@+id/appbar_policy"
                layout="@layout/tool_bar_with_cancel_btn"
                app:elevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@{@string/title_appbar_policy}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/policy_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6sp"
                android:paddingHorizontal="28dp"
                android:paddingTop="29dp"
                android:text="@string/policy_des"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/appbar_policy" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/svPolicy"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/border_term_of_use"
                android:paddingLeft="15dp"
                android:paddingTop="18dp"
                android:paddingRight="24dp"
                android:paddingBottom="21dp"
                app:layout_constraintTop_toBottomOf="@+id/policy_des"
                android:paddingStart="15dp"
                android:paddingEnd="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_policy"
                style="@style/Widget.App.MaterialComponents.Button.TextButton.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:lineSpacingExtra="6sp"
                android:paddingHorizontal="24dp"
                android:text="@string/policy_note_top"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/svPolicy" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_term_of_use"
                style="@style/Widget.App.MaterialComponents.Button.TextButton.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:text="@string/policy_note_bot"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_policy" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_policy"
                style="@style/Widget.AppCompat.TextView.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="24dp"
                android:enabled="true"
                android:paddingVertical="11dp"
                android:text="@string/btn_next_policy"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="83dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_submit_policy">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_policy"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>