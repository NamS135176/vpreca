<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.signup/PolicyFragment">

        <include
            android:id="@+id/appbar_policy"
            layout="@layout/tool_bar_with_cancel_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{@string/title_appbar_policy}" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="23dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar_policy">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/policy_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:paddingHorizontal="28dp"
                    android:paddingTop="29dp"
                    android:visibility="gone"
                    android:text="@string/policy_des"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/content_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="42dp"
                    android:background="@drawable/border_term_of_use"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="24dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="21dp"
                    app:layout_constraintTop_toBottomOf="@+id/policy_des">
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_card_confirm_warning_dot"
                            android:paddingLeft="3dp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/policyItemId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/policy_text1"
                            android:textColor="@color/black"
                            android:paddingLeft="8dp"
                            android:scrollbarSize="12dp"
                            android:lineSpacingExtra="3dp"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_card_confirm_warning_dot"

                            android:paddingLeft="3dp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/policy_text2"
                            android:textColor="@color/black"
                            android:paddingLeft="8dp"
                            android:scrollbarSize="12dp"
                            android:lineSpacingExtra="3dp"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_card_confirm_warning_dot"

                            android:paddingLeft="3dp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/policy_text3"
                            android:textColor="@color/black"
                            android:paddingLeft="8dp"
                            android:scrollbarSize="12dp"
                            android:lineSpacingExtra="3dp"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_card_confirm_warning_dot"
                            android:paddingLeft="3dp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/policy_text4"
                            android:textColor="@color/black"
                            android:paddingLeft="8dp"
                            android:scrollbarSize="12dp"
                            android:lineSpacingExtra="3dp"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_policy"
                    style="@style/Widget.App.MaterialComponents.Button.TextButton.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:lineSpacingExtra="6sp"
                    android:paddingHorizontal="24dp"
                    android:text="@string/policy_note_top"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/content_policy" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_term_of_use"
                    style="@style/Widget.App.MaterialComponents.Button.TextButton.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:text="@string/policy_note_bot"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_policy" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbPolicy"
                    style="@style/Widget.App.CheckBox.Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="16dp"
                    android:text="@string/confirm_policy"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_term_of_use"
                    tools:ignore="RtlSymmetry" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit_policy"
                    style="@style/Widget.AppCompat.TextView.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="23dp"
                    android:enabled="false"
                    android:paddingVertical="11dp"
                    android:text="@string/btn_next_policy"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:cornerRadius="25dp"
                    app:layout_constraintTop_toBottomOf="@id/cbPolicy" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>