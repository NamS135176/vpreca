<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="com.lifecard.vpreca.utils.Converter" />

        <variable
            name="card"
            type="com.lifecard.vpreca.data.model.CreditCard" />

        <variable
            name="select"
            type="com.lifecard.vpreca.data.model.SelectedData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@{select.isSelected().equals(`0`) ? @drawable/bg_card_outline_white : (select.isFirst().equals(`0`) ? @drawable/bg_card_outline_selectd : @drawable/bg_card_outline_selected_first)}"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/MyCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_card_white"
                android:minHeight="88dp"
                android:paddingHorizontal="7dp"
                android:paddingVertical="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/card_logo"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:background="@drawable/logo_card"
                    android:contentDescription="@string/card_expire_date"
                    app:layout_constraintDimensionRatio="138:36"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_no"
                    style="@style/Widget.AppCompat.TextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@{card.precaNumber}"
                    android:textColor="@color/primary"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@id/card_expire_title"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_expire_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="top"
                    android:text="@string/card_expire_date"
                    android:textColor="@color/primary"
                    android:textSize="8sp"
                    app:layout_constraintBottom_toTopOf="@id/card_username"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_expire"
                    style="@style/Widget.AppCompat.TextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"

                    android:text="@{Converter.convertCardValidShort(card.precaExpirationDate)}"
                    android:textColor="@color/primary"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@id/card_username"
                    app:layout_constraintStart_toEndOf="@+id/card_expire_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_username"
                    style="@style/Widget.AppCompat.TextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:paddingEnd="40dp"
                    android:paddingRight="40dp"
                    android:text="@{card.cardNickname}"
                    android:textColor="@color/primary"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/card_type_logo"
                    android:layout_width="0dp"
                    android:layout_height="9dp"
                    android:background="@drawable/visa_gift"
                    android:contentDescription="@string/card_expire_date"
                    app:layout_constraintBottom_toBottomOf="@id/card_username"
                    app:layout_constraintDimensionRatio="108:36"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/card_username" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Widget.AppCompat.TextView.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{Converter.convertCurrency(card.publishAmount)}"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView
            style="@style/Widget.AppCompat.TextView.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="14sp"
            android:rotation="45"
            android:text="@string/issue_card_select_source_cross"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:transformPivotX="10dp"
            android:transformPivotY="10dp"
            android:visibility="@{select.isFirst().equals(`0`) ? View.GONE : View.VISIBLE}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>