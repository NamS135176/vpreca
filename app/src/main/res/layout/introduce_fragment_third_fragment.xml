<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.lifecard.vpreca.utils.Converter" />
        <import type="com.lifecard.vpreca.utils.ModelExtKt" />
        <variable
            name="card"
            type="com.lifecard.vpreca.data.model.CardInfo" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/term_of_use"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.termofuse.TermOfUseFragment"
            android:paddingBottom="43dp"
            android:background="@color/primary">
            <include
                android:id="@+id/appbar_gift_third"
                layout="@layout/toolbar_with_back_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@{@string/introduce_title}"
                app:elevation="0dp"
                />
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/btnSubmitInput"
                app:layout_constraintTop_toBottomOf="@+id/appbar_gift_third">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/desThird"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/appbar_gift_third"
                        android:text="@string/introduce_third_des"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:textColor="#fff"
                        style="@style/Widget.AppCompat.TextView.Bold"
                        android:lineSpacingExtra="10sp"
                        android:textSize="16sp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_login"
                        style="@style/Widget.App.Button.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:enabled="false"
                        android:lineSpacingExtra="10sp"
                        android:paddingHorizontal="16dp"
                        android:text="@string/introduce_third_btn_top"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="24dp"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/desThird"
                        app:strokeColor="@color/white" />

                    <include layout="@layout/gift_card_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/button_login"
                        android:layout_marginVertical="22dp"
                        android:id="@+id/card_zone"
                        />
                    <LinearLayout
                        android:id="@+id/ammount_zone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/card_zone"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="30dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="11sp"
                            android:text="残高"/>
                        <com.google.android.material.textview.MaterialTextView
                            style="@style/Widget.AppCompat.TextView.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@{Converter.convertCurrency(card.publishAmount)}"
                            android:paddingLeft="12dp"
                            android:textSize="22sp"/>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_mid"
                        style="@style/Widget.App.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:enabled="true"
                        android:text="利用明細"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ammount_zone"
                        app:strokeColor="@color/white"
                        app:cornerRadius="30dp"
                        android:textSize="15sp"
                        android:lineSpacingExtra="5sp"
                        android:paddingVertical="11dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="49dp"
                        android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"/>
                    <LinearLayout
                        android:id="@+id/highlight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="28dp"
                        android:background="@drawable/border_first_introduce"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/btn_mid"
                        android:padding="17dp"
                        android:layout_marginVertical="16dp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="特記事項"
                            style="@style/Widget.AppCompat.TextView.Bold"
                            android:textColor="#fff"
                            android:textSize="14sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="11dp"
                            android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="•"
                                android:paddingHorizontal="4dp"
                                android:textColor="#fff"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="5sp"
                                android:text="カード番号はお手元のVプリカをご確認ください。"
                                android:textColor="#fff"
                                android:paddingLeft="4dp"
                                android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="•"
                                android:paddingHorizontal="4dp"
                                android:textColor="#fff"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="5sp"
                                android:text="カード裏面に「非売品」と記載されているものは、無償提供したものです"
                                android:textColor="#fff"
                                android:paddingLeft="4dp"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="ログイン"
                style="@style/Widget.AppCompat.TextView.Bold"
                android:layout_marginTop="131dp"
                android:enabled="true"
                android:textColor="@color/primary"
                android:layout_marginRight="49dp"
                android:layout_marginLeft="45dp"
                app:cornerRadius="24dp"
                android:textSize="15sp"
                android:paddingVertical="11dp"
                android:backgroundTint='@color/button_introduce_background'
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>