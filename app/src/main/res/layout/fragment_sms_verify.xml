<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="23dp"
            tools:context=".ui.signup/SignupFragment">

            <include
                android:id="@+id/appbar_sms_verify"
                layout="@layout/tool_bar_with_cancel_btn"
                app:elevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@{@string/appbar_sms_title}" />
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/btn_submit_policy"
                app:layout_constraintTop_toBottomOf="@+id/appbar_sms_verify">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sms_title"
                        style="@style/Widget.AppCompat.TextView.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingTop="32dp"
                        android:text="@string/sms_verify_title"
                        android:textColor="#0057b5"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/appbar_sms_verify"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sms_verify_des_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="21dp"
                        android:text="@string/sms_verify_des_top"
                        android:textColor="#353535"
                        android:textSize="12sp"
                        android:lineSpacingExtra="6sp"
                        android:layout_marginHorizontal="29dp"
                        app:layout_constraintTop_toBottomOf="@+id/sms_title"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sms_verify_des_bot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="18dp"
                        android:text="@string/sms_verify_des_bot"
                        android:textColor="#353535"
                        android:textSize="12sp"
                        android:lineSpacingExtra="6sp"
                        android:layout_marginHorizontal="29dp"
                        app:layout_constraintTop_toBottomOf="@+id/sms_verify_des_top"
                        />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/sms_layout_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="29dp"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/sms_verify_des_bot">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sms_verify_code_title"
                            style="@style/Widget.AppCompat.TextView.Bold"
                            android:textColor="#353535"
                            android:textSize="12sp"
                            android:lineSpacingExtra="6sp"
                            android:layout_weight="1"
                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:gravity="right"
                            android:id="@+id/phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sms_verify_phone_example"
                            style="@style/Widget.AppCompat.TextView.Bold"
                            android:textColor="#353535"
                            android:textSize="12sp"
                            android:lineSpacingExtra="6sp"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                    <com.lifecard.vpreca.ui.custom.MyTextInputLayoutWhiteBack
                        android:id="@+id/code_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sms_layout_title">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/idCodeVerify"
                            style="@style/TextInputEditTextFilledBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_signup_style"
                            android:hint="@string/sms_verify_code_hint"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="@integer/max_otp_code"
                            android:paddingHorizontal="17dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </com.lifecard.vpreca.ui.custom.MyTextInputLayoutWhiteBack>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sms_verify_desscription_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="32dp"
                        android:text="@string/sms_verify_description_first"
                        android:textColor="#353535"
                        android:textSize="12sp"
                        android:lineSpacingExtra="6sp"
                        android:layout_marginHorizontal="29dp"
                        app:layout_constraintTop_toBottomOf="@+id/code_input_layout"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sms_verify_desscription_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sms_verify_description_second"
                        android:textColor="#353535"
                        android:textSize="12sp"
                        android:lineSpacingExtra="6sp"
                        android:layout_marginHorizontal="29dp"
                        app:layout_constraintTop_toBottomOf="@+id/sms_verify_desscription_first"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sms_verify_desscription_third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="22dp"
                        android:text="@string/sms_verify_description_third"
                        android:textColor="#353535"
                        android:textSize="12sp"
                        android:lineSpacingExtra="6sp"
                        android:layout_marginHorizontal="29dp"
                        app:layout_constraintTop_toBottomOf="@+id/sms_verify_desscription_second"
                        />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_policy"
                style="@style/Widget.AppCompat.TextView.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="24dp"
                android:enabled="false"
                android:paddingVertical="11dp"
                android:text="@string/btn_next_policy"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>