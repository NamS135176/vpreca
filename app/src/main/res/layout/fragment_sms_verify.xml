<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="23dp"
            tools:context=".ui.signup/SignupFragment">

            <include
                android:id="@+id/appbar_signup"
                layout="@layout/tool_bar_with_cancel_btn"
                app:elevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@{@string/appbar_sms_title}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sms_title"
                style="@style/Widget.AppCompat.TextView.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="32dp"
                android:text="@string/sms_verify_title"
                android:textColor="#0057b5"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/appbar_signup"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sms_verify_des_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="32dp"
                android:text="@string/sms_verify_des_top"
                android:textColor="#353535"
                android:textSize="12sp"
                android:lineSpacingExtra="6dp"
                android:layout_marginHorizontal="29dp"
                app:layout_constraintTop_toBottomOf="@+id/sms_title"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sms_verify_des_bot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="26dp"
                android:text="@string/sms_verify_des_bot"
                android:textColor="#353535"
                android:textSize="12sp"
                android:lineSpacingExtra="6dp"
                android:layout_marginHorizontal="29dp"
                app:layout_constraintTop_toBottomOf="@+id/sms_verify_des_top"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/sms_layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/sms_verify_des_bot">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sms_verify_code_title"
                    style="@style/Widget.AppCompat.TextView.Bold"
                    android:textColor="#353535"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6dp"
                    android:layout_weight="1"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sms_verify_phone_example"
                    style="@style/Widget.AppCompat.TextView.Bold"
                    android:textColor="#353535"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>