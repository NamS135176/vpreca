<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lifecard.vpreca">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VPreca"
        android:usesCleartextTraffic="true"
        tools:overrideLibrary="com.google.firebase.analytics.ktx">
        <activity
            android:name=".ui.webview.WebViewActivity"
            android:exported="false"
            android:theme="@style/Theme.VPreca.NoActionBar" />
        <activity
            android:name=".IntroduceActivity"
            android:exported="false"
            android:theme="@style/Theme.VPreca.NoActionBar" />
        <activity
            android:name=".TermOfUseActivity"
            android:exported="false"
            android:theme="@style/Theme.VPreca.NoActionBar" />
        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.VPreca.NoActionBar" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.VPreca.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:autoRemoveFromRecents="true"
            android:excludeFromRecents="true"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.VPreca.NoActionBar"
            tools:targetApi="lollipop" />
        <activity
            android:name=".MainActivity"
            android:autoRemoveFromRecents="true"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@style/Theme.VPreca.NoActionBar"
            tools:targetApi="lollipop" />
    </application>

</manifest>